 #include <vector>

 void print(auto const& v, auto const& rem, int middle = -1)
 {
     for (int i{}; auto n : v)
         std::cout << (i++ == middle ? "‚îÇ " : "") << n << ' ';
     std::cout << rem << '\\n';
