.SH Example


// Run this code

 #include <iostream>
 #include <iterator>
 #include <algorithm>
 #include <vector>

 int main()
 {
     std::vector<int> v;
     std::generate_n(std::back_insert_iterator<std::vector<int>>(v), // can be simplified
                     10, [n=0]() mutable { return ++n; });        // with std::back_inserter
     for (int n : v)
         std::cout << n << ' ';
     std::cout << '\\n';
 }

