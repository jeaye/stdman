.SH Example

   
// Run this code

 #include <vector>
 #include <ranges>
 #include <iostream>
  
 int main()
 {
   std::vector<int> ints{0,1,2,3,4,5};
   auto even = [](int i){ return 0 == i % 2; };
   auto square = [](int i) { return i * i; };
  
   for (int i : ints | std::view::filter(even) | std::view::transform(square)) {
     std::cout << i << ' ';
   }
 }

