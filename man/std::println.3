.SH Example


// Run this code

 #include <print>

 int main()
 {
     // Each call to std::println ends with new-line
     std::println("Please"); // overload (1)
     std::println("enter"); // (1)

     std::print("pass");
     std::print("word");

     std::println(); // (3); valid since C++26; same effect as std::print("\\n");
 }

