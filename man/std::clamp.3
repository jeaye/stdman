.SH Example


// Run this code

 #include <algorithm>
 #include <cstdint>
 #include <iomanip>
 #include <iostream>

 int main()
 {
     std::cout << "[raw] "
                  "[" << INT8_MIN << ',' << INT8_MAX << "] "
                  "[0," << UINT8_MAX << "]\\n";

     for (const int v : {-129, -128, -1, 0, 42, 127, 128, 255, 256})
         std::cout << std::setw(4) << v
                   << std::setw(11) << std::clamp(v, INT8_MIN, INT8_MAX)
                   << std::setw(8) << std::clamp(v, 0, UINT8_MAX) << '\\n';
 }

